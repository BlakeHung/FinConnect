generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          UserRole  @default(USER)
  expenses      Expense[]
  incomes       Income[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Expense {
  id          String        @id @default(cuid())
  amount      Decimal
  date        DateTime
  category    String
  description String?
  receipt     String?
  status      PaymentStatus @default(PENDING)
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([userId])
}

model Income {
  id          String    @id @default(cuid())
  amount      Decimal
  date        DateTime
  category    String
  description String?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

enum UserRole {
  ADMIN
  MANAGER
  USER
  GUEST
}

enum PaymentStatus {
  PENDING
  PAID
  CANCELLED
}